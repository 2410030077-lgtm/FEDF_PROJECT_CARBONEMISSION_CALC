  <div class="container">
    <h2>Enter Your Details</h2>
    <form id="carbonForm">
      <label for="carKm">Car travel (km per week)</label>
      <input type="number" id="carKm" placeholder="e.g. 100">

      <label for="flights">Flights (hours per year)</label>
      <input type="number" id="flights" placeholder="e.g. 20">

      <label for="electricity">Electricity use (kWh per month)</label>
      <input type="number" id="electricity" placeholder="e.g. 200">

      <button type="button" onclick="calculateCarbon()">Calculate My Footprint</button>
    </form>

    <div class="result" id="resultBox">
      <h3>Your Results</h3>
