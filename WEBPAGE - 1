  <script>
    function calculateCarbon() {
      let carKm = parseFloat(document.getElementById("carKm").value) || 0;
      let flights = parseFloat(document.getElementById("flights").value) || 0;
      let electricity = parseFloat(document.getElementById("electricity").value) || 0;

      // Emission factors (simplified)
      let carEmission = carKm * 0.2 * 4; // 0.2 kg/km, weekly‚Üímonthly
      let flightEmission = flights * 90; // 90 kg CO2 per flight hour
      let electricityEmission = electricity * 0.9; // 0.9 kg per kWh

      let total = carEmission + flightEmission + electricityEmission;

      let message = "";
      if (total < 1000) {
        message = "üëè Great! Your footprint is below average. Keep it up!";
      } else if (total < 3000) {
        message = "üôÇ Your footprint is moderate. Try using public transport or saving energy.";
      } else {
        message = "‚ö† High footprint! Consider reducing flights, switching to renewable energy, or cutting down car use.";
      }

      document.getElementById("resultText").innerHTML = 
        "Your estimated monthly CO‚ÇÇ emissions: <b>" + total.toFixed(2) + " kg</b><br><br>" + message;

      document.getElementById("resultBox").style.display = "block";
    }
  </script>

